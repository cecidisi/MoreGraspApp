mixin item_content(label, field)
    label #{label}:
    p(name=field)

mixin detail_item(label, field)
    .detail-item
        +item_content(label, field)

mixin detail_item_sm(label, field)
    .detail-item.sm
        +item_content(label, field)

mixin detail_item_lg(label, field)
    .detail-item.lg
        +item_content(label, field)


