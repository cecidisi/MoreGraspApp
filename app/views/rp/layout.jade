                      span.sr-only Toggle navigation
                      span.icon-bar
                      span.icon-bar
                      span.icon-bar
                    a.navbar-brand(href='#')
                      img(src='/media/moregrasp-logo.jpg')
                      div.title:  h3(data-i18n='mgrp-title')=title
                  #mg-navbar-collapse.navbar-collapse.collapse(aria-expanded=true)
                    ul.nav.navbar-nav.navbar-right.menu
                        +nav_tab('home')
                        +nav_tab('register')
                        +nav_tab('faq')
                        +flag_tab('en')
