// Review

mixin get_answer(i18n_label, field, isSecondary)
    .row
        if(isSecondary)
            label.answer.secondary(data-i18n=i18n_label)
        else
            label.answer(data-i18n=i18n_label)
        label.answer :
        p.form-answer(field=field)

mixin get_answer_no_dots(i18n_label, field)
    .row
        label.answer(data-i18n=i18n_label)
        p.form-answer(field=field)


#panel-7.input-panel.center-aligned(name='review', style={display: 'none'})
    h4(data-i18n='mgrp-header-review') Review
    p.explanation(data-i18n="mgrp-header-review-explanation")
    br 
    // Personal Data
    .answer-container.large
        h5(data-i18n='mgrp-header-personal-data', data-i18n-noreplace): a(href='#panel-1'): i.edit-answer
        +get_answer('mgrp-lbl-first-name', 'first_name')
        +get_answer('mgrp-lbl-last-name', 'last_name')
        +get_answer('mgrp-lbl-country', 'country')
        +get_answer('mgrp-lbl-city', 'city')
        +get_answer('mgrp-lbl-street', 'street')
        +get_answer('mgrp-lbl-number', 'number')
        +get_answer('mgrp-lbl-zip', 'zip')
        +get_answer('mgrp-lbl-email', 'email')
