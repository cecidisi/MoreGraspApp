    .answer-container.large
        h5(data-i18n='mgrp-header-abilities', data-i18n-noreplace): a(href='#panel-4'): i.edit-answer
        +get_answer_no_dots('mgrp-lbl-hand-to-mouth', 'hand_to_mouth')
        +get_answer_no_dots('mgrp-lbl-glass-to-mouth', 'glass_to_mouth')
