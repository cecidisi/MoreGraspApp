////////////////////////////////////////
//          TERMS & CONDIITONS
///////////////////////////////////////
#panel-0.input-panel.center-aligned(style={display: 'none'})
    .row
        h4#titleTermsAndConditions #{__('mgrp-terms-and-conditions-title')}
        div.terms-container
            p
                |   #{__('mgrp-terms-and-conditions-p1.1')}
                a(href='http://moregrasp.eu') www.moregrasp.eu
                |   #{__('mgrp-terms-and-conditions-p1.2')}
            p #{__('mgrp-terms-and-conditions-p2')}
            p #{__('mgrp-terms-and-conditions-p3')}
            ul
                li #{__('mgrp-terms-and-conditions-bp1')}
                li #{__('mgrp-terms-and-conditions-bp2')}
                li #{__('mgrp-terms-and-conditions-bp3')}
                li #{__('mgrp-terms-and-conditions-bp4')}
                li #{__('mgrp-terms-and-conditions-bp5')}
                li #{__('mgrp-terms-and-conditions-bp6')}
                li #{__('mgrp-terms-and-conditions-bp7')}
                li #{__('mgrp-terms-and-conditions-bp8')}
                li #{__('mgrp-terms-and-conditions-bp9')}
                li #{__('mgrp-terms-and-conditions-bp10')}
                li #{__('mgrp-terms-and-conditions-bp11')}
        div.disclaimer
            p#pDisclaimer
                strong #{__('mgrp-disclaimer') + ': '}
                | #{__('mgrp-disclaimer-text')}
        div.accept-terms-container
            label#lblTermsAccepted #{__('mgrp-accept-terms-and-conditions')}
            input/.toggle-terms-and-conditions.cbx-toggle(type="checkbox", data-toggle="toggle", data-size=large, data-on="#{__('mgrp-toggle-on')}", data-off="#{__('mgrp-toggle-off')}", data-onstyle="success")


