          #mg-navbar-collapse.navbar-collapse.collapse(aria-expanded=true)
            ul.nav.navbar-nav.navbar-right.flag-container
              li.active:  a.flag.flag-en.active(name='en', href='/registration-platform/lang=en', hreflang='en')
              li:  a.flag.flag-de(name='de', href='/registration-platform/lang=de', hreflang='de')
            ul.nav.navbar-nav.navbar-right.menu
              li.active:  a(href='/registration-platform/home', data-i18n='mgrp-nav-home') Home
              li:  a(href='/registration-platform/register', data-i18n='mgrp-nav-register') Register
              li:  a(href='/registration-platform/faq', data-i18n='mgrp-nav-faq') FAQ
    
