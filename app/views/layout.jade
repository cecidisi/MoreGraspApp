doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet', href='/css/rp-style.css')
      
    block livereload
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')
        
  body
